{{yield}}
<div class="row spacer">
    <div class="col-xs-12 col-sm-6">
        <button {{action 'previous'}} class="btn btn-default btn-block {{previousClass}}">
            Zurück
        </button>
    </div>
    <div class="col-xs-12 col-sm-6 col-no-height">
        <button {{action 'next'}} class="btn btn-default btn-block {{nextClass}}">
            Weiter
        </button>
    </div>

    <div class="col-xs-12 col-sm-6 col-no-height">
        <button {{action 'startExercise'}} class="btn btn-default btn-block {{startExerciseButtonClass}}">
            Starte Übung
        </button>
    </div>
    <div class="col-xs-12 col-sm-6 col-no-height">
        <button {{action 'finishLevel'}} class="btn btn-default btn-block {{finishLevelButtonClass}}">
            {{#if model.finishLevelButtonText}}
                {{model.finishLevelButtonText}}
            {{else}}
                Level abschließen
            {{/if}}
        </button>
    </div>
</div>