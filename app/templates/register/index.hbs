<div id="register">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h1>{{t 'register.index.header.title'}}</h1>
            </div>
            <div class="row">
                <div class="col-xs-12">
                  {{t 'register.index.body.description'}}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <h3>{{t 'register.index.body.things'}}</h3>
                    <p>{{t 'register.index.body.things.text'}}</p>
                    <p>
                        <button type="button" class="btn btn-default btn-block" data-toggle="modal" data-target="#register-example-modal">
                            {{t 'register.index.body.example'}}
                        </button>
                    </p>
                    <div class="modal fade register-things-example-modal" id="register-example-modal" tabindex="-1" role="dialog" aria-labelledby="register-example-modal">
                      {{partial 'register/example-modal'}}
                    </div>
                  {{#link-to 'register.things' classNames='btn btn-default btn-block'}}{{t 'register.index.body.things.confirm'}} <span class="glyphicon glyphicon-menu-right"></span>{{/link-to}}
                </div>
                <div class="col-xs-12 col-md-6">
                    <h3>{{t 'register.index.body.standard'}}</h3>
                    <p>{{t 'register.index.body.standard.text'}}</p>
                  {{#link-to 'register.standard' classNames='btn btn-default btn-block'}}{{t 'register.index.body.standard.confirm'}} <span class="glyphicon glyphicon-menu-right"></span>{{/link-to}}
                </div>
            </div>
        </div>
    </div>
</div>