<div id="login">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <h1>{{t 'login.header.title'}}</h1>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <form {{action 'getPasswordMetaData' on='submit'}}>
                        <div class="form-group">
                            <label for="identification">{{t 'login.body.email'}}</label>
                          {{input id='identification' class='form-control' placeholder=identificationPlaceholder value=identification disabled=isProcessingInput}}
                        </div>
                        <div class="form-group">
                            <button class="btn btn-default" type="submit" {{bind-attr disabled=isProcessingInput}}>{{t 'login.body.continue'}}</button>
                        </div>
                    </form>

                {{#if showStandardPasswordAuthentication}}
                    <form {{action 'authenticate' on='submit'}}>
                        <div class="form-group">
                            <label for="password">{{t 'login.body.password'}}</label>
                          {{input id='password' class='form-control' placeholder=passwordPlaceholder type='password' value=password disabled=isProcessingInput}}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default" {{bind-attr disabled=isProcessingInput}}>{{t 'login.body.login'}}</button>
                        </div>
                    </form>
                {{/if}}

                {{#if showThingsPasswordAuthentication}}
                  {{things-login thingsData=thingsData password=password filePath=filePath loginDone="setPassword" authenticate='authenticate'}}
                {{/if}}

                    <div class="row">
                        <div class="col-xs-12" style="text-align: right;">
                            {{#link-to 'password-forgotten' (query-params emailPrefill=identification)}}
                              Passwort vergessen?
                            {{/link-to}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>